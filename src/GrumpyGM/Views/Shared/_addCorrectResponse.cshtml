@model GrumpyGM.DataLayer.Models.CorrectResponse

<h3>Add A Correct Answer Response</h3>
<br>
<div class="form-group">
    @using (Html.BeginForm("AddCorrectResponse", "Quiz", FormMethod.Post))
    {
        <p>
            Response: @Html.TextAreaFor(x => x.Response, new { @class = "form-control", @rows = "3", @placeholder = "Slap that Response Here" })
           <div> For last question? @Html.CheckBoxFor(x => x.LastQuestionRespose)</div>
            <button type="submit" class="btn btn-success" style="margin-top: 10px">Submit</button>
        </p>
    }
</div>